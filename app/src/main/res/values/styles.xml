<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">#0099ff</item>
    <item name="colorPrimaryDark">#007acc</item>
    <item name="colorAccent">@color/color_yellow</item>



    </style>

    <style name="transparent_button">
        <item name="android:minWidth">88dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:padding">8dp</item>
        <item name="android:background">@drawable/button_transparent</item>

    </style>
    <style name="FacebookLoginButton">
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/btn_social_fb</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>
    <style name="TextHeadline">
        <item name="android:textColor">@color/text_color1</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="TextTitle" parent="Base.TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="TextSubhead" parent="Base.TextAppearance.AppCompat.Subhead">
        <item name="android:textColor">@color/color_black</item>
    </style>
    <style name="TextBody1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/color_black</item>

    </style>
    <style name="TextBody2" parent="Base.TextAppearance.AppCompat.Body2">
        <item name="android:textColor">@color/color_black</item>

    </style>
    <style name="TextCaption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/color_black</item>

    </style>
    <style name="TextButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/color_black</item>

    </style>

</resources>
