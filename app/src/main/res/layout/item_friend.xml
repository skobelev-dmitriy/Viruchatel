<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/im_user_photo"
        android:src="@drawable/img_user_female"
        android:layout_margin="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Маргарита Баранова"
        android:id="@+id/tv_user_name"
        android:textColor="@color/text_color1"
        android:layout_marginTop="16dp"
        android:layout_toRightOf="@+id/im_user_photo"
        android:layout_marginRight="16dp"
        android:lines="2" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/im_user_photo"
        android:layout_below="@+id/tv_user_name"
        android:layout_marginRight="16dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/rating"
                android:id="@+id/textView31"
                android:textColor="@color/text_color_gray"
                android:layout_toRightOf="@+id/im_user_photo"
                android:layout_below="@+id/tv_user_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView27"
                android:src="@drawable/ic_star_small"
                android:layout_toRightOf="@+id/textView31"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="3.2"
                android:id="@+id/tv_rating"
                android:textColor="@color/color_yellow"
                android:layout_below="@+id/tv_user_name"
                android:layout_toRightOf="@+id/imageView27" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/in_top"
                android:id="@+id/textView34"
                android:textColor="@color/text_color_gray"
                android:layout_toRightOf="@+id/im_user_photo"
                android:layout_below="@+id/tv_user_name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView30"
                android:src="@drawable/ic_top_small"
                android:layout_toRightOf="@+id/textView31"
                android:layout_below="@+id/tv_user_name"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="1320"
                android:id="@+id/tv_top"
                android:textColor="@color/color_yellow"
                android:layout_below="@+id/tv_user_name"
                android:layout_toRightOf="@+id/imageView27" />
        </TableRow>
    </LinearLayout>

</RelativeLayout>