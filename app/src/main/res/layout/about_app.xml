<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="32dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/img_about_rober"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView6"
                android:src="@drawable/img_about_fire"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если на Вас напали"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если случился пожар"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                style="@style/TextAppearance.AppCompat.Body2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/img_about_car"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView4"
                android:src="@drawable/img_about_child"
                android:layout_weight="1" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если сломалась машина"
                android:id="@+id/textView7"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если у ребенка неприятности в школе"
                android:id="@+id/textView8"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body2" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="bottom">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:src="@drawable/img_about_elderly"
                android:layout_weight="1" />

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/img_about_caraccident"
                android:layout_weight="1" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если Вы ухаживаете за людьми с ограниченными возможностями"
                android:id="@+id/textView9"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body2" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Если Вы стали свидетелем аварии или преступления"
                android:id="@+id/textView10"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textColor="@color/color_black"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="16dp"
                style="@style/TextAppearance.AppCompat.Body2" />
        </TableRow>

    </TableLayout>
</LinearLayout>