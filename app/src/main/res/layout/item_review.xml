<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Дверью хлопал, стекло протирал..."
                android:id="@+id/tv_review"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:textColor="@color/color_black" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/im_photo"
                android:src="@drawable/img_user_male"
                android:layout_below="@+id/tv_review"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Константин \nКонстантиновский"
                android:id="@+id/tv_title"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_below="@+id/tv_review"
                android:layout_toRightOf="@+id/im_photo"
                android:textColor="@color/text_color_gray"
                android:lines="2"
                android:layout_alignBottom="@+id/im_photo"
                android:gravity="center_vertical" />

            <ImageView
                android:layout_width="3dp"
                android:layout_height="wrap_content"
                android:id="@+id/im__review_color"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_alignBottom="@+id/im_photo"
                android:layout_alignTop="@+id/tv_review"
                android:background="@color/text_color_green" />
        </RelativeLayout>


</LinearLayout>